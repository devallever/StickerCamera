<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/id_my_sticker_iv_drag"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/ss_drag"
        android:padding="15dp"/>

    <ImageView
        android:id="@+id/id_item_my_sticker_iv_type"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/id_my_sticker_iv_drag"
        android:padding="7dp"/>
    <TextView
        android:id="@+id/id_item_my_sticker_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/id_item_my_sticker_iv_type"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/id_item_my_sticker_iv_delete"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/ss_delete"
        android:padding="15dp"
        android:layout_alignParentRight="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>