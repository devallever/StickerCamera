<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zf.sticker">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_128"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/FullScreenTheme">

        <provider
            android:authorities="${applicationId}.fileprovider"
            android:name="android.support.v4.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>

        </provider>

        <activity android:name="com.zf.sticker.ui.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.zf.sticker.ui.CropActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.zf.sticker.ui.StickerEditorActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.zf.sticker.ui.ShareActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.zf.sticker.ui.StoreActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.zf.sticker.ui.MyStickerActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.zf.sticker.ui.StickerDetailActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>

        <service android:name=".service.DownloadStickerService"/>

        <meta-data
            android:name="UMENG_APPKEY"
            android:value="5a71560df43e487507000230" >
        </meta-data>
        <meta-data
            android:name="UMENG_CHANNEL"
            android:value="googleplay" >
        </meta-data>
        <meta-data
            android:name="UMENG_LOCAL_VERSION"
            android:value="false" >
        </meta-data>
    </application>

</manifest>